<!-- GAME INDEX -->
<h1>Listing Games</h1>

<table>
  <thead>
    <tr>
      <th>Name (and bgg id)</th>
      <th>Num owning</th>
      <th>Num wanting to play</th>
      <th>BGG Geek Buddy Analysis</th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= link_to game.name, game %>
            <%= link_to "(bgg ##{game.bgg_game_id})", game.bgg_game_url %>
        </td>
        <td>
          Owned: <%= game.ownerships.size %>
        </td>
        <td>
          Desired: <%= game.play_wishes.size %>
        </td>
        <td>
           <%= link_to "BGG analysis", game.bgg_game_analysis_url %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
