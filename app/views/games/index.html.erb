<% content_for :title do %>
Listing Games - LoB Game Match
<% end %>


<!-- GAME INDEX -->

<ul class="horizontal menu">
  <li><%= link_to "All games", games_path %></li>
  <li><%= link_to "Desired games", desired_games_path %></li>
  <li><%= link_to "Rarer desired games", rare_games_path %></li>
  <li><%= link_to "Uniquely owned games", uniquely_owned_games_path %></li>
</ul>


<h1>Listing Games</h1>

<table>
  <thead>
    <tr>
      <th>Name (and bgg id)</th>
      <th>Num owning</th>
      <th>Num wanting to play</th>
      <th>BGG Geek Buddy Analysis</th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= link_to game.name, game %>
            <%= link_to "(bgg ##{game.bgg_game_id})", game.bgg_game_url %>
        </td>
        <td>
          Owned: <%= game.own_count %>
        </td>
        <td>
          Desired: <%= game.pw_count %>
        </td>
        <td>
           <%= link_to "BGG analysis", game.bgg_game_analysis_url %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
