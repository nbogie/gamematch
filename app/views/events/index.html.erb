<% content_for :title do %>
Listing Events - LoB Game Match
<% end %>

<!-- EVENT INDEX -->
<h1>Listing Events</h1>

<div class="table-scroll">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Meetup link</th>
        <th>RSVPs</th>
        <th>Status</th>
        <th>Event time</th>
      </tr>
    </thead>
  
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= link_to event.name, event %></td>
          <td><%= link_to 'meetup', event.url %></td>
          <td><%= event.rsvps.size %></td>
          <td><%= event.status %></td>
          <td><%= event.event_time %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
