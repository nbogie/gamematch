<p id="notice"><%= notice %></p>

<h1>Listing Players</h1>

<table border='1'>
  <thead>
    <tr>
      <th>Bgg username</th>
      <th colspan="2"></th>
      <th>Meetup username</th>
      <th>Meetup status</th>
      <th>Meetup joined</th>
      <th>Meetup bio</th>
      <th>last colln req time</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><a href='https://boardgamegeek.com/user/<%= player.bgg_username %>'><%= player.bgg_username %></a></td>

        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><a href='https://www.meetup.com/LondonOnBoard/members/<%= player.meetup_user_id %>'><%= player.meetup_username %></a></td>
        <td><%= player.meetup_status %></td>
        <td><%= player.meetup_joined %></td>
        <td><%= player.meetup_bio %></td>
        <td><%= player.last_collection_request_time %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

