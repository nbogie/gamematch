<p id="notice"><%= notice %></p>

<h1>Listing Players</h1>

<table>
  <thead>
    <tr>
      <th>Bgg username</th>
      <th>Bgg user</th>
      <th>Meetup username</th>
      <th>Meetup user</th>
      <th>Meetup bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.bgg_username %></td>
        <td><%= player.bgg_user_id %></td>
        <td><%= player.meetup_username %></td>
        <td><%= player.meetup_user_id %></td>
        <td><%= player.meetup_bio %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

